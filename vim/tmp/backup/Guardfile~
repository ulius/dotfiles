# A sample Guardfile
# More info at https://github.com/guard/guard#readme

guard 'livereload' do
  # watch(%r{app/views/.+\.(erb|haml|slim)})
  # watch(%r{app/helpers/.+\.rb})
  # watch(%r{public/.+\.(css|js|html)})
  # watch(%r{config/locales/.+\.yml})
  # # Rails Assets Pipeline
  watch(%r{BackboneBundle\/Resources/public\/css\/.+\.(less|css)})
  watch(%r{BackboneBundle\/Resources/public\/js\/.+\.(js)})
  watch(%r{BackboneBundle\/Resources/views\/.+\.(html.twig)})
end
